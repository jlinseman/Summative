    /*
   * Score for player 1
   * 
   * to count the score for player 1 
   * 
   * */
  public static int scoreP1(int scoreCountP1) 
  {
    scoreCountP1++;
    return scoreCountP1;
  }
  /*
   * Score for player 2
   * 
   * to count the score for player 2
   * 
   * */
  public static int scoreP2(int scoreCountP2) 
  {
    scoreCountP2++;
    return scoreCountP2;
  }
  public static int getWedgeCount(int wedgeCount)
  {
    wedgeCount=wedgeCount+10;
    return wedgeCount;
  }
