  System.out.println("Are You READYYYY!!!");
  enter = In.getString();
  System.out.println("Q1. Who has the most final's titles in the NBA? \n 1. Los Angeles Lakers \n 2. Boston Celtics \n 3. Chicago Bulls \n 4. Golden State Warriors");
  anwSports = In.getString();
  if(anwSports.equals  ("2"))
  {
    System.out.println("YOU are CORRECT!!");
  }
  else 
  {
    System.out.println("Sorry you are wrong...");
  }
  System.out.println("Q2. Michael Jordan played in the NBA for the Chicago Bulls and which other team? \n 1. Los Angeles Lakers \n 2. Washington Wizards \n 3. New York Knicks \n 4. San Antonio Spurs");
  anwSports = In.getString();
  if(anwSports.equals  ("2"))
  {
    System.out.println("YOU are CORRECT!!");
  }
  else 
  {
    System.out.println("Sorry you are wrong...");
  }
  System.out.println("Q3. At which Summer Olympics in Rome did Muhammad Ali win gold in the light heavyweight division? \n 1. 1959 \n 2. 1955 \n 3. 1960 \n 4. 1961");
  anwSports = In.getString();
  if(anwSports.equals  ("3"))
  {
    System.out.println("YOU are CORRECT!!");
  }
  else 
  {
    System.out.println("Sorry you are wrong...");
  }
  System.out.println("Q4. Which sport has the most teams \n 1. NFL \n 2. NBA \n 3. MLB \n 4. NHL");
  anwSports = In.getString();
  if(anwSports.equals  ("1"))
  {
    System.out.println("YOU are CORRECT!!");
  }
  else 
  {
    System.out.println("Sorry you are wrong...");
  }
  System.out.println("Q5. Who has the most NBA rings \n 1. Kobe Bryant \n 2. Lebron James \n 3. Michael Jordan \n 4. Bill Russell");
  anwSports = In.getString();
  if(anwSports.equals  ("4"))
  {
    System.out.println("YOU are CORRECT!!");
  }
  else 
  {
    System.out.println("Sorry you are wrong...");
  }
  
}
