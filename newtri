    public static void history(String anwHisP1, String anwHisP2)
    {
    String enter = "";
    System.out.println(" You have picked History \n You will be asked five questions each one will get harder each time \n The fifth question is the one that will give you wedge if you get it right ");
    System.out.print("Press enter if YOU ARE READYYYY!!!");
    enter = In.getString();
    String[] getHQ = getHistQuestions();
    for(int i = 0; i < 10; i++)
    {
      System.out.println(getHQ[i]);
      anwHisP1 = In.getString();
      anwHisP2 = In.getString();
      if(anwHisP1.equals(getHQ[i+1]))
      {      
        System.out.println("YOU are CORRECT!!");  
      }
      else 
      {
        System.out.println("Sorry you are wrong...");
      }
      if(anwHisP2.equals(getHQ[i+1]))
      {
        System.out.println("YOU are CORRECT!!");
      } 
      else   
      {
        System.out.println("Sorry you are wrong...");
      }
      i++;
    }
    
    }
    
